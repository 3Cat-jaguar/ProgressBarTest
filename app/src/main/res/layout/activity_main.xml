<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <kr.co.sisoul.progressbartest.customview.CustomLineProgressBar
        android:id="@+id/line_progress"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ring_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:customProgressRatio="40"
        android:layout_margin="50dp"
        />

    <kr.co.sisoul.progressbartest.customview.CustomRingProgressBar
        android:id="@+id/ring_progress"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:customProgressRatio="50"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ring_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/edit_ratio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/set_ratio_btn"
            android:inputType="number"
            android:gravity="center"
            android:hint="진행율 입력"
            />
        <Button
            android:id="@+id/set_ratio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="적용"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/edit_ratio"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>